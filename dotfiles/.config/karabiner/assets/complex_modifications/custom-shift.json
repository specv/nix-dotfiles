{
    "title":"Change `shift` to `caps_lock` or `shift`",
    "rules":[
        {
            "description":"Post Caps if Shift is tapped, Shift if held.",
            "manipulators":[
                {
                    "from": {
                        "key_code": "left_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock"
                        }
                    ],
                    "type": "basic"
                },
                {
                    "from": {
                        "key_code": "right_shift",
                        "modifiers": {
                            "optional": [
                                "any"
                            ]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_shift",
                            "lazy": true
                        }
                    ],
                    "to_if_alone": [
                        {
                            "key_code": "caps_lock"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
