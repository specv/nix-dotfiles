{
    "title":"Change `left_control` to `escape` or `left_control`",
    "rules":[
        {
            "description":"Post Esc if Control is tapped, Control if held.",
            "manipulators":[
                {
                    "type":"basic",
                    "from":{
                        "key_code":"left_control",
                        "modifiers":{
                            "optional":[
                                "any"
                            ]
                        }
                    },
                    "to":[
                        {
                            "key_code":"left_control",
                            "lazy":true
                        }
                    ],
                    "to_if_alone":[
                        {
                            "key_code":"escape"
                        }
                    ]
                }
            ]
        }
    ]
}
