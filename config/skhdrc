## send window to space and follow focus (without disabling SIP)
lcmd + ctrl + shift - r : yabai -m window --space recent && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space recent | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space recent | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - h : yabai -m window --space prev   && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space prev   | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space prev   | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - l : yabai -m window --space next   && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space next   | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space next   | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 1 : yabai -m window --space s1     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s1     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s1     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 2 : yabai -m window --space s2     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s2     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s2     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 3 : yabai -m window --space s3     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s3     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s3     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 4 : yabai -m window --space s4     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s4     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s4     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 5 : yabai -m window --space s5     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s5     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s5     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 6 : yabai -m window --space s6     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s6     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s6     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 7 : yabai -m window --space s7     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s7     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s7     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 8 : yabai -m window --space s8     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s8     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s8     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 9 : yabai -m window --space s9     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s9     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s9     | jq -r '.label | .[-1:]')"
lcmd + ctrl + shift - 0 : yabai -m window --space s0     && yabai -m config mouse_follows_focus on && sleep 0.1 && yabai -m display --focus $(yabai -m query --displays --space s0     | jq '.index') && skhd -k "cmd + ctrl + alt - $(yabai -m query --spaces --space s0     | jq -r '.label | .[-1:]')"


# display (leader key: lctrl + shift)
## focus display
## This is a workaround to temporarily enable mouse_follows_focus when switching displays.
## You need to add `yabai -m signal --add event=display_changed action="yabai -m config mouse_follows_focus off"` in `yabairc` for coordinated use.
## Because if you directly add yabai -m config mouse_follows_focus off to the end of the command, there is a chance that the mouse will not follow.
lctrl + shift - r : yabai -m config mouse_follows_focus on && yabai -m display --focus recent
lctrl + shift - p : yabai -m config mouse_follows_focus on && yabai -m display --focus prev
lctrl + shift - n : yabai -m config mouse_follows_focus on && yabai -m display --focus next
lctrl + shift - 1 : yabai -m config mouse_follows_focus on && yabai -m display --focus 1
lctrl + shift - 2 : yabai -m config mouse_follows_focus on && yabai -m display --focus 2
lctrl + shift - 3 : yabai -m config mouse_follows_focus on && yabai -m display --focus 3
lctrl + shift - 7 : yabai -m config mouse_follows_focus on && yabai -m display --focus 1
lctrl + shift - 8 : yabai -m config mouse_follows_focus on && yabai -m display --focus 2
lctrl + shift - 9 : yabai -m config mouse_follows_focus on && yabai -m display --focus 3

## send window to display and follow focus
lctrl + ctrl + alt - r : yabai -m config mouse_follows_focus on && yabai -m window --display recent && sleep 0.1  && yabai -m display --focus recent
lctrl + ctrl + alt - p : yabai -m config mouse_follows_focus on && yabai -m window --display prev   && sleep 0.1  && yabai -m display --focus prev
lctrl + ctrl + alt - n : yabai -m config mouse_follows_focus on && yabai -m window --display next   && sleep 0.1  && yabai -m display --focus next
lctrl + ctrl + alt - 1 : yabai -m config mouse_follows_focus on && yabai -m window --display 1      && sleep 0.1  && yabai -m display --focus 1
lctrl + ctrl + alt - 2 : yabai -m config mouse_follows_focus on && yabai -m window --display 2      && sleep 0.1  && yabai -m display --focus 2
lctrl + ctrl + alt - 3 : yabai -m config mouse_follows_focus on && yabai -m window --display 3      && sleep 0.1  && yabai -m display --focus 3
lctrl + ctrl + alt - 7 : yabai -m config mouse_follows_focus on && yabai -m window --display 1      && sleep 0.1  && yabai -m display --focus 1
lctrl + ctrl + alt - 8 : yabai -m config mouse_follows_focus on && yabai -m window --display 2      && sleep 0.1  && yabai -m display --focus 2
lctrl + ctrl + alt - 9 : yabai -m config mouse_follows_focus on && yabai -m window --display 3      && sleep 0.1  && yabai -m display --focus 3
